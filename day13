      try
       {
           FileReader fr=new FileReader("D:\\Users\\ASUS\\Desktop\\ayesha\\test2.txt");
           BufferedReader br=new BufferedReader(fr);
           String line;
           while((line=br.readLine())!=null)
             {
                 Matcher m=p.matcher(line);

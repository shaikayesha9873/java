import java.util.Scanner;
import java.util.Locale;
class StringMethods
{
 public static void main(String args[])
 {
   Scanner sc = new Scanner(System.in);
   System.out.println("enter the String1 ");
   String str1 = sc.nextLine();
   String str2 = sc.nextLine();
   String english = str1.toLowerCase(Locale.forLanguageTag("en"));
   String tasleem = str2.toUpperCase(Locale.forLanguageTag("en"));
   System.out.println("length of string is   :"+str1.length());
   System.out.println("sub String is   :"+str1.substring(6));
   System.out.println("char is     :" +str1.charAt(6));
   System.out.println("substring start and end is   :"+str2.substring(0,6));
   System.out.println("replace string   :"+str1.replace(str1,str2));
   System.out.println("join     :"+str1.join(str1,str2));
   System.out.println("boolean     :"+str1.equals(str2));
   System.out.println("empty or not     :"+str1.isEmpty());
   System.out.println(" concatenates     :"+str1.concat(str2));
   System.out.println("intern      :"+str2.intern());
   System.out.println("int index of   :"+str1.indexOf(2));
   System.out.println("lower case     :"+str1.toLowerCase());
   System.out.println("locale    :"+ english);
   System.out.println("upper case    "+str1.toUpperCase());
   System.out.println("upper locale       :"+ tasleem);
   System.out.println("trim           :"+str1.trim());
   System.out.println("format       :"+String.format(str1));
   System.out.println("split the string :"+str1.split("r"));
   System.out.println("the intered string :"+str1.intern());
   if(str2.equalsIgnoreCase(str1))  {
       System.out.println("two strings are equals");
     } else {
       System.out.println("not equal");
      }
    
  
   }
}
   
OUTPUT:
:\>javac StringMethods.java

D:\>java StringMethods
